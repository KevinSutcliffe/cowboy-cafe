<UserControl x:Class="PointOfSale.CustomizeChiliCheeseFries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <StackPanel>
            <RadioButton GroupName="Size" Content="Small" IsChecked="{Binding Path=Size}"/>
            <RadioButton GroupName="Size" Content="Medium" IsChecked="{Binding Path=Size}"/>
            <RadioButton GroupName="Size" Content="Large" IsChecked="{Binding Path=Size}"/>
        </StackPanel>
    </Grid>
</UserControl>
